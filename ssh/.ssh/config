Host bitbucket.org
 IdentityFile ~/.ssh/id_rsa

Host *
    # send keep-alives every 5 seconds
    ServerAliveInterval 5
    # send 12 keep-alived without response before closing
    ServerAliveCountMax 12

# git clone git@github-as-kellen:kellen/something.git
Host github-as-kellen
  HostName github.com
  User kellen
  IdentityFile /home/kellen/.ssh/id_rsa2.pub

# ssh -f -N -R 1222:localhost:22 kellen@cretin.net
# ssh -f -N quakenet
Host quakenet
  HostName cretin.net
  LocalForward 6667 irc.quakenet.org:6667
  User kellen

Host tools-prod-* db-prod-* web-prod-* service-prod-* 
  HostName %h.ne.local
  User alladeen

Host tools-int-* db-int-* web-int-* service-int-* alfresco-int-*
  HostName %h.ne.local
  User alladeen
